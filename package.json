{
  "name": "cpf",
  "version": "1.1.3",
  "author": "Max Naegeler Roecker",
  "license": "MIT",
  "description": "A set of crucial hash functions for ECMAScript",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "type": "module",
  "typings": "index.d.ts",
  "files": [
    "/dist/index.{d.ts,d.ts.map,js,js.map}",
    "index.ts"
  ],
  "exports": {
    ".": {
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "clean": "rm -rf dist coverage",
    "build": "npm run clean && tsc",
    "test": "npm run build && npx wtr \"dist/tests.js\" --node-resolve",
    "test:coverage": "npm run build && npx wtr \"dist/tests.js\" --node-resolve --coverage && npx serve coverage/lcov-report",
    "lint": "eslint --ext .ts . --ignore-path .gitignore",
    "format": "eslint --ext .ts . --fix --ignore-path .gitignore"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MaxRoecker/cpf.git"
  },
  "keywords": [
    "id",
    "cpf",
    "brazilian"
  ],
  "bugs": {
    "url": "https://github.com/MaxRoecker/cpf/issues"
  },
  "homepage": "https://github.com/MaxRoecker/cpf#readme",
  "dependencies": {
    "cruxhash": "^1.1.3",
    "evaluable": "^1.1.1"
  },
  "devDependencies": {
    "@esm-bundle/chai": "^4.3.4",
    "@types/chai": "^4.2.18",
    "@types/mocha": "^8.2.2",
    "@typescript-eslint/eslint-plugin": "^4.22.1",
    "@typescript-eslint/parser": "^4.22.1",
    "@web/test-runner": "^0.13.4",
    "chai": "^4.3.4",
    "eslint-config-prettier": "^8.3.0",
    "mocha": "^8.4.0",
    "prettier": "^2.2.1",
    "serve": "^11.3.2",
    "typescript": "^4.2.4"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
      "no-fallthrough": "off"
    }
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "always"
  }
}
