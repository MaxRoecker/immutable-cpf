{
  "compilerOptions": {
    "outDir": "dist",
    "lib": ["ES2020"],
    "target": "ES2015",
    "module": "ES2015",
    "moduleResolution": "Node",
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "inlineSources": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "stripInternal": true
  },
  "files": ["index.ts", "tests.ts"]
}
